<Window x:Class="ProcSim.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProcSim WPF" Height="350" Width="525">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Process Scheduling Simulator" FontSize="16" Margin="0,0,0,10"/>
            <Button Content="Run Scheduler" Click="RunScheduler_Click" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding Processes}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding RemainingTime}" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding State}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
