<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ProcSim.Wpf.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Style="{StaticResource MaterialDesignWindow}"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="av"
    x:Class="ProcSim.Wpf.Views.MainWindowView"
    Title="ProcSim" Height="600" Width="900"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cadastro e Configuração -->
            <RowDefinition Height="*"/>
            <!-- Listagem de Processos -->
        </Grid.RowDefinitions>

        <!-- Configuração e Cadastro de Processos -->
        <Grid Grid.Row="0" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <!-- Cadastro de Processos -->
                <ColumnDefinition Width="3*"/>
                <!-- Configuração -->
                <ColumnDefinition Width="4*"/>
                <!-- Menu -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Cadastro de Processos -->
            <views:ProcessRegistrationView DataContext="{Binding ProcessRegistrationViewModel}" Grid.Column="0"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <!-- Configuração -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botões-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Configuração da Simulação -->
                <views:SimulationSettingsView DataContext="{Binding SimulationSettingsViewModel}" Grid.Row="0" Margin="0,0,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
                    <Button Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Command="{Binding RunSchedulingCommand}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Iniciar">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>
                    <Separator Width="10" Visibility="Hidden"/>
                    <Button Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Command="{Binding CancelSchedulingCommand}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Cancelar">
                        <materialDesign:PackIcon Kind="Stop" />
                    </Button>
                    <Separator Width="10" Visibility="Hidden"/>
                    <Button Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Command="{Binding ResetSchedulingCommand}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Reiniciar">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </StackPanel>
            </Grid>
            <materialDesign:PopupBox Grid.Column="2" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" VerticalAlignment="Top" Margin="20,0,0,0">
                <StackPanel>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,0,10,0" Text="Light" VerticalAlignment="Center" />
                        <ToggleButton x:Name="DarkModeToggleButton" Grid.Column="1" Click="MenuDarkModeButton_Click" />
                        <TextBlock Grid.Column="2" Margin="10,0,0,0" Text="Dark" VerticalAlignment="Center"/>
                    </Grid>
                    <Separator />
                </StackPanel>
            </materialDesign:PopupBox>
        </Grid>

        <!-- Lista de Processos -->
        <Grid Grid.Row="1">
            <GroupBox Header="Fila de Processos" FontSize="12" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <views:ProcessListView Header="Ready" ItemsSource="{Binding ReadyProcesses}" Grid.Column="0"/>
                    <views:ProcessListView Header="Running" ItemsSource="{Binding RunningProcesses}" Grid.Column="1"/>
                    <views:ProcessListView Header="Blocked" ItemsSource="{Binding BlockedProcesses}" Grid.Column="2"/>
                    <views:ProcessListView Header="Completed" ItemsSource="{Binding CompletedProcesses}" Grid.Column="3"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
