<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ProcSim.WPF.Views"
    mc:Ignorable="av"
    x:Class="ProcSim.WPF.Views.MainWindowView"
    Title="ProcSim WPF" Height="500" Width="800"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <!-- Definição das linhas do Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Linha para a área de controle -->
            <RowDefinition Height="*"/>
            <!-- Linha para a área principal -->
        </Grid.RowDefinitions>

        <!-- Seção Superior (Título e Botões) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Simulador de Escalonamento de Processos" FontSize="18" FontWeight="Bold" Margin="0,0,20,0"/>
            <Button Content="Iniciar Simulação" Width="150" Click="RunScheduler_Click" Background="#007BFF" Foreground="White" Padding="5"/>
        </StackPanel>

        <!-- Seção Principal (Lista de Processos e Formulário) -->
        <Grid Grid.Row="1">

            <!-- Definição das colunas do Grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Coluna para a lista de processos -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Coluna para o formulário de cadastro -->
            </Grid.ColumnDefinitions>

            <!-- Lista de Processos (Fila de Execução) -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Fila de Processos" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                <!-- Processos Prontos -->
                <GroupBox Header="Prontos" Margin="0,0,0,5">
                    <ListBox ItemsSource="{Binding ReadyProcesses}" Height="120">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Width="100"/>
                                    <TextBlock Text="{Binding RemainingTime}" Width="50"/>
                                    <TextBlock Text="{Binding State}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <!-- Processos Bloqueados -->
                <GroupBox Header="Bloqueados" Margin="0,0,0,5">
                    <ListBox ItemsSource="{Binding BlockedProcesses}" Height="80"/>
                </GroupBox>

                <!-- Processos Concluídos -->
                <GroupBox Header="Concluídos">
                    <ListBox ItemsSource="{Binding CompletedProcesses}" Height="80"/>
                </GroupBox>
            </StackPanel>

            <!-- Formulário de Cadastro -->
            <views:ProcessRegistrationView Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
