<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ProcSim.Wpf.Views"
    mc:Ignorable="av"
    x:Class="ProcSim.Wpf.Views.MainWindowView"
    Title="ProcSim" Height="600" Width="900"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cadastro e Configuração -->
            <RowDefinition Height="*"/>
            <!-- Listagem de Processos -->
        </Grid.RowDefinitions>

        <!-- Configuração e Cadastro de Processos -->
        <Grid Grid.Row="0" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Cadastro de Processos -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Configuração -->
                <ColumnDefinition Width="Auto"/>
                <!-- Botão -->
            </Grid.ColumnDefinitions>

            <!-- Cadastro de Processos -->
            <views:ProcessRegistrationView DataContext="{Binding ProcessRegistrationViewModel}" Grid.Column="0"/>

            <!-- Configuração da Simulação -->
            <views:SimulationSettingsView DataContext="{Binding SimulationSettingsViewModel}" Grid.Column="1" Margin="10,0,0,0"/>

            <!-- Botões de Controle -->
            <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                <Button Content="Iniciar" Height="40" Width="150"
                        Command="{Binding RunSchedulingCommand}"
                        Background="#007BFF" Foreground="White" Margin="0,0,0,10"/>
                <Button Content="Cancelar" Height="40" Width="150"
                        Command="{Binding CancelSchedulingCommand}"
                        Background="#FF0000" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Lista de Processos -->
        <Grid Grid.Row="1">
            <GroupBox Header="Fila de Processos" FontSize="16" FontWeight="Bold">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <views:ProcessListView Header="Ready" ItemsSource="{Binding ReadyProcesses}" Grid.Column="0"/>
                    <views:ProcessListView Header="Running" ItemsSource="{Binding RunningProcesses}" Grid.Column="1"/>
                    <views:ProcessListView Header="Blocked" ItemsSource="{Binding BlockedProcesses}" Grid.Column="2"/>
                    <views:ProcessListView Header="Completed" ItemsSource="{Binding CompletedProcesses}" Grid.Column="3"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
