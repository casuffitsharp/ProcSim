<UserControl x:Class="ProcSim.Wpf.Views.GanttCellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Background="Transparent">
    <Grid Background="Transparent">
        <!-- O Rectangle usa o Brush definido na propriedade do UC. O binding é OneTime para que não haja reavaliações -->
        <Rectangle x:Name="AnimatedRect"
               Fill="{Binding Brush, ElementName=root, Mode=OneTime}"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
            <Rectangle.RenderTransform>
                <ScaleTransform x:Name="ScaleTransform" ScaleX="0"/>
            </Rectangle.RenderTransform>
            <Rectangle.RenderTransformOrigin>0,0.5</Rectangle.RenderTransformOrigin>
        </Rectangle>
    </Grid>
</UserControl>
