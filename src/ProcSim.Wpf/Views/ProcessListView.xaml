<UserControl x:Class="ProcSim.Wpf.Views.ProcessListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:conv="clr-namespace:ProcSim.Wpf.Converters"
             Height="Auto" Width="Auto">

        <UserControl.Resources>
            <conv:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        </UserControl.Resources>

        <GroupBox Header="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
              FontSize="12" FontWeight="Bold" VerticalAlignment="Stretch" MinHeight="150">
            <ListView ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  SelectionMode="Single" Focusable="False" BorderThickness="0"
                  MinHeight="100" IsManipulationEnabled="False" IsHitTestVisible="False"
                  HorizontalAlignment="Stretch">

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <!-- Nome: Ajuste Dinâmico -->
                        <GridViewColumn Header="Nome" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Timer: Ajuste Automático -->
                        <GridViewColumn DisplayMemberBinding="{Binding RemainingTime}" Width="Auto">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader>
                                    <GridViewColumnHeader.Content>
                                        <materialDesign:PackIcon Kind="Timer" Width="20" Height="20"/>
                                    </GridViewColumnHeader.Content>
                                </GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <!-- Tipo: Ajuste Dinâmico -->
                        <GridViewColumn Header="Tipo" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type, Converter={StaticResource EnumDescriptionConverter}}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </UserControl>

    