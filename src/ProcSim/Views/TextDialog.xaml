<UserControl x:Class="ProcSim.Views.TextDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProcSim.Views"
             mc:Ignorable="d" 
             Width="900"
             Height="800"
             KeyDown="UserControl_KeyDown"
             d:DesignHeight="800"
             d:DesignWidth="900">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0"
               Text="{Binding Title, FallbackValue=Título, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,0,0,12"/>

        <!-- O TextBox ocupa todo o resto automaticamente -->
        <TextBox Grid.Row="1"
                 Text="{Binding FullText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  IsReadOnly="True"
                  TextWrapping="Wrap"
                  AcceptsReturn="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  BorderThickness="0"
                  Background="Transparent" />
        
        <!-- Botão fixo embaixo -->
        <StackPanel Grid.Row="2"
                      Orientation="Horizontal"
                      HorizontalAlignment="Right"
                      Margin="0,16,0,0">
            <Button Content="OK"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
