<Window x:Class="ProcSim.Mockups.OptionBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Opção B – Dashboard com FAB" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Ribbon Superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="DarkSlateGray" >
            <!-- Grupo: Cadastro via Ícone -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="CadastrarProcesso_Click" ToolTip="Cadastrar Processo">
                <materialDesign:PackIcon Kind="Plus" />
            </Button>
            <!-- Grupo: Simulação -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="Play_Click" ToolTip="Play">
                <materialDesign:PackIcon Kind="Play"/>
            </Button>
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="Pause_Click" ToolTip="Pause">
                <materialDesign:PackIcon Kind="Pause"/>
            </Button>
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="Reset_Click" ToolTip="Reset">
                <materialDesign:PackIcon Kind="Refresh"/>
            </Button>
            <!-- Grupo: Configurações -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="SaveConfig_Click" ToolTip="Salvar Config">
                <materialDesign:PackIcon Kind="ContentSave"/>
            </Button>
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="LoadConfig_Click" ToolTip="Carregar Config">
                <materialDesign:PackIcon Kind="FolderOpen"/>
            </Button>
            <!-- Grupo: Tema -->
            <ToggleButton x:Name="tbDarkMode" Style="{StaticResource MaterialDesignIconButton}" Click="ToggleDarkMode_Click" ToolTip="Dark Mode">
                <materialDesign:PackIcon Kind="ThemeLightDark"/>
            </ToggleButton>
        </StackPanel>

        <!-- Área Central: Master–Detail -->
        <Grid Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <!-- Lista de Processos -->
            <Border Grid.Column="0" Background="LightGray" Margin="10" CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Lista de Processos" FontWeight="Bold" Margin="10"/>
                    <ListBox x:Name="lbProcessList" Margin="10"/>
                </StackPanel>
            </Border>
            <!-- Detalhes/Operações do Processo -->
            <Border Grid.Column="1" Background="WhiteSmoke" Margin="10" CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Operações do Processo" FontWeight="Bold" Margin="10"/>
                    <DataGrid x:Name="dgOperations" AutoGenerateColumns="False" Margin="10"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Floating Action Button (FAB) como alternativa para cadastro -->
        <Button x:Name="fabAddProcess" Width="56" Height="56" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16"
            Style="{StaticResource MaterialDesignFloatingActionButton}" Click="FabAddProcess_Click" ToolTip="Adicionar Processo">
            <materialDesign:PackIcon Kind="Plus" />
        </Button>

        <!-- Modal Overlay para Cadastro (inicialmente oculto) -->
        <Grid x:Name="ModalOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" Padding="20" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Cadastro de Processo" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBox x:Name="modalProcessName"  Margin="0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Cancelar" Click="ModalCancel_Click" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0"/>
                        <Button Content="Salvar" Click="ModalSave_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
